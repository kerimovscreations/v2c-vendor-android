<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/small_margin"
    android:layout_marginEnd="@dimen/medium_margin"
    android:layout_marginStart="@dimen/medium_margin"
    android:layout_marginTop="@dimen/small_margin"
    app:cardCornerRadius="@dimen/small_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ship_list_item_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/normal_margin"
                android:background="@color/colorWhite"
                android:padding="@dimen/medium_margin" />

            <TextView
                android:id="@+id/ship_list_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ship_list_item_photo"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_toEndOf="@id/ship_list_item_photo"
                android:text="Egg"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ship_list_item_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ship_list_item_title"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_toEndOf="@id/ship_list_item_photo"
                android:text="sdf sdfads fasdf ads"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ship_list_item_counter_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginTop="@dimen/normal_margin"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/medium_margin"
                android:src="@mipmap/shopping_basket_ic"
                android:tint="@color/colorAccent" />

            <TextView
                android:id="@+id/ship_list_item_counter_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="2 x (10 kg)"
                android:textColor="#444444"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ship_list_item_calendar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:layout_marginStart="@dimen/normal_margin"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/medium_margin"
                android:src="@mipmap/calendar_ic"
                android:tint="@color/colorAccent" />

            <TextView
                android:id="@+id/ship_list_item_calendar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="12/12/2017"
                android:textColor="#444444"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ship_list_item_price_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:layout_marginStart="@dimen/normal_margin"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/medium_margin"
                android:src="@mipmap/money_ic"
                android:tint="@color/colorAccent" />

            <TextView
                android:id="@+id/ship_list_item_price_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="15.3"
                android:textColor="#444444"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ship_list_item_tracking_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_marginStart="@dimen/normal_margin"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="Shipping"
                    android:textColor="@color/colorGray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Transit"
                    android:textColor="@color/com_facebook_blue"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Delivered"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/ship_list_item_tracking_progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normal_margin"
                android:progress="60"
                android:theme="@style/blueProgressBar" />
        </LinearLayout>

        <Button
            android:id="@+id/ship_list_item_next_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/normal_margin"
            android:layout_marginStart="@dimen/normal_margin"
            android:text="Next checkpoint (20%)"
            android:textColor="@color/colorWhite"
            android:theme="@style/BlueButtonTheme" />

        <Button
            android:id="@+id/ship_list_item_done_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:layout_marginStart="@dimen/normal_margin"
            android:text="Complete"
            android:textColor="@color/colorWhite"
            android:theme="@style/GreenButtonTheme" />
    </LinearLayout>
</android.support.v7.widget.CardView>